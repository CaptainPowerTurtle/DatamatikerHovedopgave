@model LoginViewModel
<div class="row justify-content-center" >
    @if (Model.EnableLocalLogin)
    {


        <form asp-route="Login" class="text-center border border-light p-5">
            <h1 class="mt-5 mb-3">Login</h1>
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="md-form">
                <label asp-for="Email"></label>
                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
            </div>

            <div class="md-form">
                <label asp-for="Kodeord"></label>
                <input type="password" class="form-control" placeholder="Kodeord" asp-for="Kodeord" autocomplete="off">
            </div>

            @*@if (Model.AllowRememberLogin)
            {
                <div class="form-check">
                    <input type="checkbox" asp-for="RememberLogin" class="custom-control-input" id="defaultUnchecked">
                    <label asp-for="RememberLogin" class="form-check-label">Remember My Login</label>
                </div>
            }*@

            <div class="mt-4 mb-4">
                <button class="btn btn-success" name="button" value="login">Login</button>
                <button class="btn btn-danger" name="button" value="cancel">Tilbage</button>
            </div>

            <partial name="_ValidationSummary"/>
        </form>

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Invalid login request</strong>
                There are no login schemes configured for this client.
            </div>
        }
    }
</div>